<div class="container">
    <div class="jumbotron"></div>
    <h1>The Home View!</h1>
    <button ng-click="locationToggle = !locationToggle" class="btn btn-default">Show Locations</button>
    <button ng-click="userToggle = !userToggle" class="btn btn-default">Show Users</button>


    <ul ng-show="locationToggle">
        <li ng-repeat="location in locations">{{location}}</li>
    </ul>
    <ul ng-show="userToggle">
        <li ng-repeat="user in users">{{user}}</li>
    </ul>

</div>