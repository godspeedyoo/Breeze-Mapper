<h1>This is the charts template</h1>

<div class="container-fluid">
	<select ng-model="filters.userId" class="form-control filter select-user" ng-options="user.id as user.name for user in users">
	</select>

	<div class="filter-transaction-type filter">
		<div class="checkbox">
			<label>
				<input ng-model="filters.earning" type="checkbox">Earning
			</label>
		</div>
		<div class="checkbox">
			<label>
				<input ng-model="filters.charge" type="checkbox">Charge
			</label>
		</div>
		<div class="checkbox">
			<label>
				<input ng-model="filters.showActive" type="checkbox">Show Filters
			</label>
		</div>
	</div>
	<div ng-show="!!filters.showActive" class="filter-settings filter">
		<ul>
			<li>Earning: {{filters.earning}}</li>
			<li>Charge: {{filters.charge}}</li>
			<li>User ID: {{filters.userId}}</li>
		</ul>
	</div>

	<button class="btn btn-primary filter-submit filter" ng-click="getTransactions({'userId': filters.userId })">Submit</button>
</div>

<div>
	<canvas id="line" class="chart chart-line" data="data" labels="labels" legend="true" options="options" series="series" click="onClick"></canvas> 
	
</div>